# Nice tweakz
## Alternative exit way (shared by gnuKS)
mode "exit: [l]ogout, [r]eboot, [s]hutdown, loc[k]" {
  bindsym l exec i3-msg exit
  bindsym r exec systemctl reboot
  bindsym s exec systemctl poweroff
  bindsym Escape mode "default"
  bindsym Return mode "default"
  bindsym k exec i3lock-fancy; mode "default"
}

bindsym $mod+Shift+e mode "exit: [l]ogout, [r]eboot, [s]hutdown, loc[k]"

# HDMI selector
mode "hdmi: [a]OC, [s]ony [o]ff" {
  bindsym a exec "xrandr --output eDP-1 --primary --mode 1366x768 --pos 0x0 --rotate normal --output HDMI-1 --mode 1360x768 --pos 1366x0 --rotate normal & "; mode "default"
  bindsym s exec "xrandr --output eDP-1 --primary --mode 1366x768 --pos 0x0 --rotate normal --output HDMI-1 --mode 1280x720 --pos 43x24 --rotate normal &"; mode "default"
  bindsym p exec "xrandr --output eDP-1 --primary --mode 1366x768 --pos 0x0 --rotate normal --output HDMI-1 --mode 1360x768 --pos 0x0 --rotate normal"
  bindsym o exec "xrandr --output HDMI-1 --off"
  bindsym Escape mode "default"
  bindsym Return mode "default"



}

bindsym $mod+Shift+h mode "hdmi: [a]OC, [s]ony [o]ff"




