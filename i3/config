bar {
        i3bar_command i3bar --transparency
	mode hide
	position top
        colors {
            # RGBA format
            # The fourth option accounts for the opacity 
            background #000000aa
            statusline #aaffffff
            separator  #fff33221
        }
	status_command ~/.config/i3status/bar.sh
}

# Make the currently focused window a scratchpad
